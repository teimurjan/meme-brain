{
  "private": true,
  "name": "meme-brain",
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd src/client && vite build",
    "build:server": "cd src/server && vite build",
    "check": "npm run type-check && npm run lint:fix && npm run prettier",
    "deploy": "npm run build && devvit upload",
    "dev": "npm run devvit:setup && concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit\"",
    "dev:client": "cd src/client && vite build --watch",
    "dev:devvit": "devvit playtest",
    "dev:server": "cd src/server && vite build --watch",
    "dev:vite": "cd src/client && vite --port 7474",
    "devvit:reset": "node tools/reset-devvit.js",
    "devvit:setup": "node tools/setup-devvit.js",
    "devvit:verify": "node tools/verify-devvit.js",
    "launch": "npm run build && npm run deploy && devvit publish",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "login": "devvit login",
    "prepare": "simple-git-hooks",
    "prettier": "prettier-package-json --write ./package.json && prettier --write .",
    "type-check": "tsc --build"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.14",
    "@devvit/web": "0.12.9",
    "ai": "^6.0.45",
    "devvit": "0.12.9",
    "express": "5.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "^3.7.0",
    "tailwind-merge": "3.3.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@tailwindcss/vite": "4.1.6",
    "@types/express": "5.0.1",
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5",
    "@vitejs/plugin-react": "4.4.1",
    "clsx": "^2.1.1",
    "concurrently": "9.1.2",
    "dotenv-cli": "8.0.0",
    "eslint": "9.23.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "globals": "15.15.0",
    "prettier": "3.5.3",
    "prettier-package-json": "2.8.0",
    "prettier-plugin-tailwindcss": "0.6.11",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "4.1.6",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "vite": "6.2.4",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "3.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run devvit:verify"
  }
}
